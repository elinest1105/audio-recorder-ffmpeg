{
  "name": "Audio Record",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js",
      "worker.js"
    ],
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture",
    "downloads",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon_128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Z",
        "mac": "Command+Shift+Z"
      }
    },
    "start_record": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Start Record"
    },
    "stop_record": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Stop Record"
    },
    "save_audio": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Save Audio as wav file"
    }
  }
}